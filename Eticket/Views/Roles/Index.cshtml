@model IEnumerable<IdentityRole>




<h1>All Roles </h1>

<div style="position:fixed;right:25px; bottom:60px;" class="text-white  rounded-circle  ">
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> Add New</a>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(a=>a.Id)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.Name)</th>
               
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    


                    <td class="align-middle">@item.Id </td>
                    <td class="align-middle">@item.Name</td>
                   
                        <td class="align-middle">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                                <i class="fas fa-eye"></i> Details
                            </a>

                        </td>

                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                                <i class="fas fa-edit"></i> Update
                            </a>
                        </td>
                        <td class="align-middle">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
             
                </tr>

            }
        </tbody>
    </table>
   

}
else
{
    <div class="mt-4 alert alert-warning">
        <h3> There's No Roles!!</h3>
    </div>
}
