@model Actor
@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<h1>Delete Actor</h1>

<br />
<br />


<form asp-action="Delete" enctype="multipart/form-data">

  

    <div class="mb-3">

        <div class="align-middle text-center">
           
            <img src="~/Images/@Model.ProfilePictureUrl" class="w-25 rounded-circle" />

        </div>

       
    </div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" aria-describedby="emailHelp" readonly>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>



    <div class="mb-3">
        <label asp-for="Bio" class="form-label">Bio</label>
        <input asp-for="Bio" class="form-control" aria-describedby="emailHelp" readonly>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <input type="submit" value="Confirm Delete" class="btn btn-outline-danger" />

    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>