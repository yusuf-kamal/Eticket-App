@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<h1>All Users </h1>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(a=>a.FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.Email)</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    


                    <td class="align-middle">@item.FirstName </td>
                    <td class="align-middle">@item.UserName</td>
                    <td class="align-middle">@item.Email</td>
                   
                </tr>

            }
        </tbody>
    </table>
    <partial name="_AddButtonPartialView" model="@Model.ToString()" />

}
else
{
    <div class="mt-4 alert alert-warning">
        <h3> There's No Employee!!</h3>
    </div>
}
